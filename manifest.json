{
    "manifest_version": 3,
    "name": "FocusTube - YouTube Study Focus",
    "version": "1.0",
    "description": "Hide distractions! Only show YouTube videos from your whitelisted study channels.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": [ "https://www.youtube.com/*" ],
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ]
}